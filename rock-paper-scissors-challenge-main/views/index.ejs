<!DOCTYPE html>
<html lang="en" style="font-size: 1.6rem; height: 100%;">

<head>
    <%- include ('../views/head.ejs') %>
</head>

<body style="height: 100%;">
    <div class="h-100  align-items-center justify-content-center">
        <blockquote class="blockquote text-center">
            <h1 class="display-1">R-P-S-L-S Game</h1><br>
        </blockquote>
        <% if(typeof alert !='undefined' ) { %>
            <% alert.forEach(function(error) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%= error.msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                </div>
                <% }) %>
                    <% } %>
                        <blockquote class="blockquote text-center">
                            <p class="mb-0">Choose Game Mode</p>
                            <br>
                        </blockquote>

                        <blockquote class="blockquote text-center">
                            <form action="/singlePlayerGame" method="post">
                                <div class="form-v">
                                    <label for="playerNameID">Player Name</label>
                                    <input type="text" id="playerNameID" placeholder="Type Your Name" name="playerName"
                                        required>
                                    <button class="btn btn-primary btn-lg btn-block" type="submit" value="SinglePlayer"
                                        name="SP" required>Single Player</button>
                                </div>
                            </form>
                        </blockquote>

                        <blockquote class="blockquote text-center">
                            <form action="/PvPP1Choice" method="post">
                                <input type="text" id="player1NameID" placeholder="Type Player 1 Name"
                                    name="player1Name" required>
                                <input type="text" id="player2NameID" placeholder="Type Player 2 Name"
                                    name="player2Name" required>
                                <button class="btn btn-secondary btn-lg btn-block" type="submit" value="PvP"
                                    name="PvP">Player vs
                                    Player</button>
                            </form>
                        </blockquote>

    </div>
</body>

</html>